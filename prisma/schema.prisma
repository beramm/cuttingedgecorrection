generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model Reviews {
  id            Int       @id @default(autoincrement())
  user          String    
  content       String    @db.Text
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
}

model Pictures {
  id            Int       @id @default(autoincrement())
  url           String    @db.Text
  service_name  String    
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  password      String
  role          String
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
}

model Item {
  id            Int       @id @default(autoincrement())
  name          String    @db.Text()
  price         Int
  image_link    String
  payment_link  String
}

model Blog {
  id          Int       @id @default(autoincrement())
  slug        String    @unique
  title       String    @db.Text()
  content     String    @db.Text()
  thumbnail   String    @db.Text()
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
}