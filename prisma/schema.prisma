generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Reviews {
  id            Int       @id @default(autoincrement())
  user          String    
  content       String    @db.LongText
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
}

model Pictures {
  id            Int       @id @default(autoincrement())
  url           String    @db.LongText
  service_name  String    
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  password      String
  role          String
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
}
